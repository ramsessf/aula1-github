package entities;

public class Employee2 {
  
	private int id;
	private String name;
	private double salary;
	
	public Employee2() {
	
	}
	
	public Employee2 (int id, String name, double salary) {
		this.id = id;
		this.name = name;
		this.salary = salary;
	}
	
	public int getId() {
		return id;
	}
	
	public void setId(int id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getSalary() {
		return salary;
	}
	
	public void  aumentoSalary(int x, int porcent) {
		this.salary *= 1 + porcent / 100 ;
	}

	public String toString() {
		return id
				+ ", "
				+ name
				+ ", "
				+ salary;
				
	           
	}
	
}
