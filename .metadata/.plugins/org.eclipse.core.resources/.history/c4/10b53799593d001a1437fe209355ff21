package curso_programacao;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

public class Lista {

	public static void main(String[] args) {

		List<String> lst = new ArrayList<>();

		// Insere elementos na lista
		lst.add("Joao");
		lst.add("Jose");
		lst.add("Maria");
		lst.add("Suelen");
		lst.add("Victor");
		lst.add("Carlos");

		System.out.println(lst);

		lst.add(2, "Maurides"); // adicionado o elemento e a posicao que ele vai ocupar na lista

		System.out.println("------------------------------");
		System.out.println(lst);

		System.out.println("------------------------------");

		System.out.println("Elemento na posicao 1: " + lst.get(1)); // retorna o elemento da posicao indicada

		System.out.println("------------------------------");

		System.out.println("Tamanho total da lista: " + lst.size() + " nodos"); // retorna o tamanho da lista

		System.out.println("------------------------------");
		
		System.out.println("Index of Victor: " + lst.indexOf("Victor"));
		
		System.out.println("------------------------------");

		System.out.println(lst.remove(2)); // remove elementos por posicao, referencia ou condicao
		System.out.println(lst.remove("Maria"));
		System.out.println(lst.removeIf(x -> x.charAt(0) == 'M'));
		
		System.out.println("-------------------------------");
		System.out.println(lst.stream().filter(x -> x.charAt(0) == 'A').collect(Collectors.toList()));

		System.out.println("------------------------------");

		// laco for each(sintaxe simplicado do for tradicional)
		for (String obj : lst) {
			System.out.println(obj);
		}

		System.out.println("------------------------------");

		// similar ao comando acima - for each
		for (int i = 0; i < lst.size(); i++) {

			System.out.println(lst.get(i));

		}

		System.out.println("-----------------------------");

		System.out.println(lst);

		System.out.println("-----------------------------");

		List<Integer> result = new ArrayList<>();
		
		result.add(1);
		result.add(3);
		result.add(4);
		result.add(14);
		result.add(7);
		System.out.println(result);
		System.out.println("------------------------------");
		System.out.println("A primeira ocorrencia de um elemento maior que 4 é: " 
		+ result.stream().filter(x -> x > 4).findFirst().orElse(null));

		result.stream().filter(x -> x.).findFirst().orElse(null));
	}

}
